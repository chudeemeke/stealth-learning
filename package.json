{
  "name": "stealth-learning-spa",
  "version": "0.1.0-dev",
  "description": "Stealth learning games SPA for children aged 3-9 covering Mathematics, English, and Science",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 -c config/.eslintrc.cjs",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\"",
    "type-check": "tsc --noEmit",
    "storybook": "storybook dev -p 6006 -c config/.storybook",
    "build-storybook": "storybook build -c config/.storybook",
    "test:visual": "playwright test --project=chromium --reporter=list",
    "test:mobile": "playwright test --project='Mobile Chrome' --reporter=list",
    "test:debug": "playwright test --debug --project=chromium",
    "test:e2e": "playwright test --project=chromium --reporter=html",
    "test:ui-flow": "playwright test e2e/*-flow*.spec.ts --project=chromium --reporter=list"
  },
  "dependencies": {
    "@apollo/client": "^3.8.8",
    "@hookform/resolvers": "^3.3.4",
    "@reduxjs/toolkit": "^2.0.1",
    "@sentry/react": "^8.35.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/dompurify": "^3.2.0",
    "@types/js-cookie": "^3.0.6",
    "@types/redux-persist": "^4.3.1",
    "@types/three": "^0.180.0",
    "bcryptjs": "^3.0.2",
    "canvas-confetti": "^1.9.2",
    "clsx": "^2.1.0",
    "crypto-js": "^4.2.0",
    "date-fns": "^3.2.0",
    "dexie": "^4.2.0",
    "dompurify": "^3.2.7",
    "framer-motion": "^10.18.0",
    "graphql": "^16.8.1",
    "howler": "^2.2.4",
    "immer": "^10.1.3",
    "js-cookie": "^3.0.5",
    "lucide-react": "^0.544.0",
    "lz-string": "^1.5.0",
    "react": "^18.2.0",
    "react-confetti": "^6.1.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-redux": "^9.0.4",
    "react-router-dom": "^6.21.0",
    "recharts": "^2.15.4",
