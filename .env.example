# Stealth Learning - Secure Environment Configuration
# Copy this file to .env.local and fill in your values

# API Configuration (REQUIRED)
VITE_API_URL=https://api.stealthlearning.com
VITE_API_TIMEOUT=10000

# Security Configuration (REQUIRED)
VITE_ENCRYPTION_KEY=your-32-character-encryption-key-here
VITE_JWT_SECRET=your-jwt-secret-key-minimum-32-chars
VITE_PEPPER_SECRET=your-password-pepper-secret-64-chars

# Application Configuration
VITE_APP_ENVIRONMENT=production
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_SOURCE_MAPS=false

# COPPA Compliance
VITE_ENABLE_PARENTAL_VERIFICATION=true
VITE_DATA_RETENTION_DAYS=365

# Security Headers
VITE_CSP_ENABLED=true
VITE_SECURE_COOKIES=true

# Development Only (DO NOT USE IN PRODUCTION)
VITE_DEV_BYPASS_AUTH=false
VITE_DEV_MOCK_API=false