# Stealth Learning - Ultra-Secure Environment Configuration
# Copy this file to .env and customize for your environment

# API Configuration (REQUIRED)
VITE_API_URL=http://localhost:4000/api
VITE_API_TIMEOUT=10000

# Security Configuration (REQUIRED) - Generate secure values for production
VITE_ENCRYPTION_KEY=stealth-learning-ultra-secure-encryption-key-2024-dev
VITE_JWT_SECRET=ultra-secure-jwt-secret-for-stealth-learning-development-env-2024
VITE_PEPPER_SECRET=ultra-secure-password-pepper-secret-for-enhanced-security-stealth-learning-2024

# Application Configuration
VITE_APP_ENVIRONMENT=development
VITE_APP_VERSION=1.0.0-dev

# Feature Flags - Development Settings
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_SOURCE_MAPS=true

# COPPA Compliance - Always Required
VITE_ENABLE_PARENTAL_VERIFICATION=true
VITE_DATA_RETENTION_DAYS=365

# Security Headers - Development Mode
VITE_CSP_ENABLED=true
VITE_SECURE_COOKIES=false

# Development Features
VITE_DEV_BYPASS_AUTH=false
VITE_DEV_MOCK_API=false

# Performance Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Security Monitoring
VITE_ENABLE_SECURITY_LOGGING=true

# NOTE: For production deployment:
# 1. Generate cryptographically secure keys (min 32 chars for encryption, 64 for pepper)
# 2. Use HTTPS endpoints for all APIs
# 3. Set VITE_APP_ENVIRONMENT=production
# 4. Disable debug mode and source maps
# 5. Enable secure cookies
# 6. Use proper JWT signing service (server-side)