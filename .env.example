# Stealth Learning - Ultra-Secure Environment Configuration
# SECURITY: Copy this file to .env.local and customize with YOUR secure values
# WARNING: NEVER commit .env.local to version control!

# API Configuration (REQUIRED)
VITE_API_URL=https://api.stealthlearning.com
VITE_API_TIMEOUT=10000

# Security Configuration (REQUIRED)
# CRITICAL: Generate cryptographically secure keys for production
# Use openssl rand -hex 32 for encryption key (64 chars)
# Use openssl rand -hex 64 for pepper secret (128 chars)
VITE_ENCRYPTION_KEY=YOUR_SECURE_32_CHAR_ENCRYPTION_KEY_HERE
VITE_JWT_SECRET=YOUR_SECURE_JWT_SECRET_MINIMUM_32_CHARS_HERE
VITE_PEPPER_SECRET=YOUR_SECURE_64_CHAR_PEPPER_SECRET_FOR_ENHANCED_SECURITY_HERE

# Application Configuration (PRODUCTION)
VITE_APP_ENVIRONMENT=production
VITE_APP_VERSION=1.0.0

# Feature Flags (PRODUCTION SECURE DEFAULTS)
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_SOURCE_MAPS=false

# COPPA Compliance (REQUIRED)
VITE_ENABLE_PARENTAL_VERIFICATION=true
VITE_DATA_RETENTION_DAYS=365

# Security Headers (PRODUCTION)
VITE_CSP_ENABLED=true
VITE_SECURE_COOKIES=true

# Development Features (DISABLED IN PRODUCTION)
VITE_DEV_BYPASS_AUTH=false
VITE_DEV_MOCK_API=false

# Performance Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Security Monitoring
VITE_ENABLE_SECURITY_LOGGING=true

# ========================================
# DEVELOPMENT OVERRIDE EXAMPLES:
# For local development, override these values:
# VITE_API_URL=http://localhost:4000/api
# VITE_APP_ENVIRONMENT=development
# VITE_ENABLE_DEBUG_MODE=true
# VITE_ENABLE_SOURCE_MAPS=true
# VITE_SECURE_COOKIES=false
# ========================================

# SECURITY REQUIREMENTS FOR PRODUCTION:
# 1. Generate cryptographically secure keys using:
#    openssl rand -hex 32  # For ENCRYPTION_KEY
#    openssl rand -hex 64  # For PEPPER_SECRET
# 2. Use HTTPS endpoints for all APIs
# 3. Set VITE_APP_ENVIRONMENT=production
# 4. Disable debug mode and source maps
# 5. Enable secure cookies
# 6. Implement server-side JWT signing