name: Auto-Fix Build Failures

on:
  workflow_run:
    workflows: ["CI/CD Pipeline", "Deploy to GitHub Pages"]
    types:
      - completed
  push:
    branches: [main]
  workflow_dispatch:

permissions:
  contents: write
  pull-requests: write
  issues: write

jobs:
  check-and-fix:
    runs-on: ubuntu-latest
    if: ${{ github.event.workflow_run.conclusion == 'failure' || github.event_name == 'workflow_dispatch' }}

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          token: ${{ secrets.GITHUB_TOKEN }}
          fetch-depth: 0

      - name: Setup pnpm
        uses: pnpm/action-setup@v2
        with:
          version: 8

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          cache: 'pnpm'

      - name: Install dependencies
        run: pnpm install --frozen-lockfile

      - name: Check for TypeScript errors
        id: check-errors
        continue-on-error: true
        run: |
          pnpm type-check 2>&1 | tee typescript-errors.log
          echo "has_errors=$?" >> $GITHUB_OUTPUT

      - name: Claude Code Action - Fix TypeScript Errors
        if: steps.check-errors.outputs.has_errors != '0'
        uses: anthropics/claude-code-action@v1
        with:
          anthropic_api_key: ${{ secrets.ANTHROPIC_API_KEY }}
          github_token: ${{ secrets.GITHUB_TOKEN }}
          task: |
            Fix the TypeScript errors in this codebase. The errors are:

            $(cat typescript-errors.log)

            Please fix these errors while:
            1. Maintaining all existing functionality
            2. Following the project's coding standards
            3. Using proper TypeScript types
            4. Not simplifying or removing features
            5. Ensuring the build passes

      - name: Create Pull Request with Fixes
        if: steps.check-errors.outputs.has_errors != '0'
        uses: peter-evans/create-pull-request@v5
        with:
          token: ${{ secrets.GITHUB_TOKEN }}
          commit-message: "fix: Resolve TypeScript build errors"
          title: "ðŸ”§ Auto-fix: TypeScript Build Errors"
          body: |
            ## ðŸ¤– Automated Fix

            This PR was automatically created by Claude Code Action to fix TypeScript build errors.

            ### Changes Made:
            - Fixed TypeScript type errors
            - Ensured build compatibility
            - Maintained all existing functionality

            ### Build Status:
            - âœ… TypeScript checks passing
            - âœ… Ready for deployment

            ---
            Generated by Claude Code Action
          branch: auto-fix/typescript-errors
          delete-branch: true